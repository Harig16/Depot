<% if line_item == @current_item %>
  <tr class="line-item-highlighting">
<% else %>
  <tr>
<% end %>
  <td class="quantity"><%= button_to "+", line_items_path(product_id: line_item.product), remote: true %><%= line_item.quantity %><%= button_to "-", remove_item_line_item_path(line_item), method: :post, remote: true %></td>
  <td><%= line_item.product.title %></td>
  <td class="price"><%= number_to_currency(line_item.total_price) %></td>
  <td><%= link_to delete_icon, line_item_path(line_item), method: :delete, remote: true %></td>
</tr>
