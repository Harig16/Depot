<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

  <h2><%= t('.title') %></h2>

  <table>
    <thead id="title">
      <tr>
        <td><%= t('.quantity') %></td>
        <td><%= t('.product') %></td>
        <td><%= t('.price') %></td>
      </tr>
    </thead>
    <%= render_order cart.line_items %> <%# rendering partial file in line_items/_line_item.html.erb %>
    <tfoot>
      <tr>
        <th colspan="2">Total: </th>
        <th class="price"><%= number_to_currency(cart.total_price) %></th>
      </tr>
    </tfoot>
  </table>

  <div class="action">
    <%= button_to t('.empty'), cart, method: :delete, data: { confirm: "Are you sure?"}, remote: true %>
    <%= button_to t('.checkout'), new_order_path, method: :get, class: "checkout" %>
  </div>
</article>